@model IEnumerable<TesteContselfSistema.Models.FuncionariosTeste>


<br />
<br />

<h5>Nome do Funcionário:</h5>
@using (Html.BeginForm("Pesquisa", "FuncionariosTestesEditar", FormMethod.Get))
{
    @Html.TextBox("searching", null, new { style = "width:500px" })
    <input type="submit" value="Pesquisar" class="btn btn-default" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Salário</th>
            <th>Atividade</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    Nome não encontrado!
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.DataNascimento</td>
                    <td>R$ @item.Salario</td>
                    <td>@item.Atividades</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CodFuncionario }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.CodFuncionario })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<input type="submit" value="Novo Funcionário" class="btn btn-default" onclick="location.href='@Url.Action("Create")'">
</input>
<br />
<br />
<input type="submit" value="Voltar" class="btn btn-default" onclick="location.href='@Url.Action("Index")'">
</input>

<br />
